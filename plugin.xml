<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>

   <extension
         point="org.eclipse.ui.views">
      <category
            name="Ciplogic Eclipse Tools"
            id="MagicGroup">
      </category>
      <view
            name="Group"
            icon="icons/cet.png"
            category="MagicGroup"
            class="com.ciplogic.et.magicgroup.views.GroupView"
            id="com.ciplogic.et.magicgroup.views.GroupView">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.ui.resourcePerspective">
         <view
               ratio="0.5"
               relative="org.eclipse.ui.views.TaskList"
               relationship="right"
               id="com.ciplogic.et.magicgroup.views.GroupView">
         </view>
      </perspectiveExtension>
   </extension>

</plugin>